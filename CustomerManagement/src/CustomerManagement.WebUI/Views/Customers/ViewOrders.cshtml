@model IEnumerable<CustomerManagement.WebUI.Models.Entities.CustomerOrder>

@{
    ViewData["Title"] = "ViewOrders";
}

<h1>ViewOrders</h1>

<p>
    <a asp-controller="CustomerOrder" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Customer
            </th>
            <th>
                Order Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerOrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerOrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerOrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
